
<div class="row">
	<div class="span3">
		<div class="caption">
				<h3>Why register?</h3>
		</div>
		<p>
			By creating an account with us, you'll be able to submit multiple projects for financing within your main account.</br> Providing your information will also allow us to contact you regarding the status of your projects.
		</p>
	</div>

	<div class="span9">
		<h2>Register with Coefficient</h2>
		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal well form'}) do |f| %>
		  <%= f.error_notification %>

			<%= f.input :firstname, label: 'First Name' %>  

		  <%= f.input :email %>

		  <%= f.input :password %>

		  <%= f.input :password_confirmation %>

		  <div class="form-actions">
		  	<%= f.submit "Register", class: 'button btn-primary' %>
		  </div>
		  <%= render "devise/shared/links" %>
		<% end %>
	</div>

