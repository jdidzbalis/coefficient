<div class="span9">
	<h2>Sign in</h2>

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal well form'}) do |f| %>
	  
	  <%= f.input :email %>

	  <%= f.input :password %>

	  <%= f.input :remember_me, as: :boolean %>

	  <div class="form-actions">
	  	<%= f.submit "Sign in", class: 'button btn-primary' %>
	  </div>
	  <%= render "devise/shared/links" %>
	<% end %>

</div>