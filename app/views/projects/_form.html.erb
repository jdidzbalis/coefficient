<div class="row">
	<div class="span6 offset3">
		<div class="well">
				<%= simple_form_for @project, :url => projects_path, :html => { :multipart => true, class: 'form-horizontal' } do |f| %>
  					
  					<h4>Facility Information</h4>
  					<%= f.input :facilityname, label: 'Facility Name' %>
  					<%= f.input :facilitytype, label: 'Facility Type', as: :radio_buttons, collection: [ "Commercial", "Industrial", "Residential"] %>
  					<%= f.input :location_number, label: 'Street Number' %>
  					<%= f.input :location_street, label: 'Street Name' %>
  					<%= f.input :location_zip, label: 'ZIP Code' %>
  					<%= f.input :location_state, label: 'State', collection: ["AL", "AK", "AZ", "CA", "CO", "CT", "DE", "FL", "GA", "HI", "ID", "IL", "IN", "IA", "KS", "KY", "LA", "ME", "MD", "MA", "MI", "MN", "MS", "MO", "MT", "NE", "NV", "NH", "NJ", "NM", "NY", "NC", "ND", "OH", "OK", "OR", "PA", "RI", "SC", "SD", "TN", "TX", "UT", "VT", "VA", "WA", "WV", "WI", "WY"] %>

  					<h4>Facility Energy Use</h4>
  					<%= f.input :facilityenergyuse, label: 'Annual Energy Use (kWh)', placeholder: 'Estimate, previous year' %>
            <%= f.input :energyprice, label: 'Cost of Energy ($/kWh)', placeholder: '0.10' %>
            <%= f.input :energypurchase, label: 'Energy Contract?', as: :radio_buttons, collection: [ "Yes", "No"] %>

  					<h4>Project Information</h4>
            <%= f.input :projecttype, label: 'Project Type', as: :radio_buttons, collection: [ "Interior Lighting", "Exterior Lighting", "Boiler/Chiller", "Cooling Tower", "Pumps", "Air Handling"] %>
  					<p>Please upload a .pdf copy of your facility energy audit. If you have not completed an audit, consult with one of our preferred energy audit partners here.</p>
  					
  					<%= f.file_field :audit, label: 'Upload Energy Audit', class: 'audit-upload' %></br>

  					<%= f.submit "Submit Project", class: 'btn btn-primary', style: 'margin-left: 200px; margin-top: 40px;' %>

				<% end %>
			
		</div>
	</div>
</div>